<div class="container" >
    <div class="card">
        <div class="card-header bg-danger text-white" >
            <h4>Form Telur</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                Jenis Telur
                <input type="text" name="jenis_telur" id="jenis_telur" class="form-control" value="<%= jenis_telur %>"
                    required />
                Stok
                <input type="number" name="stok" id="stok" class="form-control" value="<%= stok %>" required />

                Harga
                <input type="number" name="harga" id="harga" class="form-control" value="<%= harga %>" required />

                <!-- using js DOM to set default value of "jenis" -->
                <script>
                    document.querySelector('input[name="jenis_telur"]').value = "<%= jenis_telur %>"
                </script>

                <button type="submit" class="btn btn-warning mt-2">
                    Simpan
                </button>
            </form>
        </div>
    </div>
</div>