<div class="container">
    <h4 class="text-warning">Makanan</h4>
    <hr>
    <ul class="list-group my-2"> 
         <!--menampung data foreach  -->
        <% data.forEach(telur=> { %> 
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-danger">Jenis Telur</small> <br />
                        <%= telur.jenis_telur %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-primary">Stock</small> <br />
                        <%= telur.stok %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-success">Harga</small> <br />
                        <%= telur.harga %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-black">Action</small> <br />

                        <!-- button edit -->
                        <a href="/telur/edit/<%= telur.id %>">
                            <button class="btn btn-sm btn-warning">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                         <a href="/telur/delete/<%= telur.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a> 

                    </div>
                </div>
            </li>
            <% }) %> 
    </ul>

    <!-- button add new data -->
    <a href="/telur/add">
        <button class="btn btn-md btn-warning text-black fw-bold mt-3">
            Tambah Data
        </button>
    </a>

</div>
