<div class="container">
    <h4 class="text-warning">Data Admin</h4>
    <hr>
    <!-- menampilkan data apoteker -->
    <ul class="list-group">
        <!-- forEach -> scanning isi array (scan = dipanggil satu satu)-->
        <% data.forEach(admin=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-info">
                            Nama Admin
                        </small> <br>
                        <%= admin.nama_admin %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-info">
                            Username
                        </small> <br>
                        <%= admin.username %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-info">
                            Password
                        </small> <br>
                        <%= admin.password %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-info">
                            Action
                        </small> <br>

                        <a href="/admin/edit/<%= admin.id %> ">
                            <button class="btn btn-warning">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/admin/delete/<%= admin.id %> "
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn btn-md btn-warning fw-bold mt-3">
            Tambah Data
        </button>
    </a>

</div>