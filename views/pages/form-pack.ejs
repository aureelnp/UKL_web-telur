<div class="container">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>Form Pack</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                Nama Pack
                <input type="text" name="nama_pack" id="nama_pack" class="form-control" value="<%= nama_pack %>"
                    required />

                Harga
                <input type="number" name="harga" id="harga" class="form-control" value="<%= harga %>" required />

                <!-- using js DOM to set default value of "jenis" -->
                <script>
                    document.querySelector('input[name="nama_pack"]').value = "<%= nama_pack %>"
                </script>

                <button type="submit" class="btn btn-warning mt-2">
                    Simpan
                </button>
            </form>
        </div>
    </div>
</div>